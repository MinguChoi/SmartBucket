<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemImg_row"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/name_row_TXT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bucket" />

    <TextView
        android:id="@+id/name_row_TXT"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/description_row_TXT"
        app:layout_constraintEnd_toStartOf="@id/price_row_TXT"
        app:layout_constraintStart_toEndOf="@+id/itemImg_row"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_row_TXT"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/price_row_TXT"
        app:layout_constraintStart_toEndOf="@id/itemImg_row"
        app:layout_constraintTop_toBottomOf="@id/name_row_TXT" />

    <TextView
        android:id="@+id/price_row_TXT"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/name_row_TXT"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>